<UserControl x:Class="ReadiMon.Plugin.Redis.RemoteExecControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"             
             xmlns:shared="clr-namespace:ReadiMon.Shared;assembly=ReadiMon.Shared"             
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:behaviours="clr-namespace:ReadiMon.Shared.Behaviours;assembly=ReadiMon.Shared"
             xmlns:controls="clr-namespace:ReadiMon.Shared.Controls;assembly=ReadiMon.Shared"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="1000">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PresentationFramework.Aero, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35, ProcessorArchitecture=MSIL;component/themes/aero.normalcolor.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="Alice"
							 Color="AliceBlue"
							 Opacity="0.5" />            
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />            
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*"
						   MinHeight="350" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"
						   MinHeight="100" />
        </Grid.RowDefinitions>

        <Image Grid.Row="0"
			   Grid.Column="0"
			   Width="48"
			   Margin="10"
			   Height="48"
			   Source="pack://application:,,,/ReadiMon.Plugin.Redis;component/Resources/remoteexec.png" />

        <StackPanel Grid.Column="1"
					Margin="20 0 0 0"
					Grid.Row="0"
					VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center"
					   Text="Remote Executor"
					   FontWeight="Bold"
					   FontSize="20" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
						   Grid.Column="0"
						   VerticalAlignment="Center"
						   Margin="0 0 10 0"
						   Text="Server:"
						   FontSize="14"
						   FontWeight="Bold" />
                <TextBlock Grid.Row="0"
						   Grid.Column="1"
						   FontSize="14"
						   VerticalAlignment="Center"
						   Text="{Binding Server}" />

                <TextBlock VerticalAlignment="Center"
						   Grid.Column="0"
						   Grid.Row="1"
						   Margin="0 0 10 0"
						   Text="Port:"
						   FontSize="14"
						   FontWeight="Bold" />
                <TextBlock VerticalAlignment="Center"
						   Grid.Column="1"
						   Grid.Row="1"
						   FontSize="14"
						   Text="{Binding Port}" />
            </Grid>
        </StackPanel>

        <shared:ToggleSwitch Grid.Row="0"
							 Grid.Column="2"></shared:ToggleSwitch>
        
        <TextBlock Grid.Row="0"
				   Grid.Column="3"
				   HorizontalAlignment="Right"				
                   VerticalAlignment="Center"
				   Text="Target server:" 
                   Margin="0 0 20 0"/>
        
        <TextBox Grid.Row="0"
				 Grid.Column="4"
				 HorizontalAlignment="Right"				
				 Height="22"	
				 Width="160"
                 Text="{Binding TargetDnsName, Mode=TwoWay}"
				 Margin="0 0 20 0" />                        
        
        <Button Grid.Row="0"
				Grid.Column="5"
				HorizontalAlignment="Right"
				Content="Clear"
				Height="22"
				Command="{Binding ClearCommand}"
				Width="80"
				Margin="0 0 20 0" />

        <Button Grid.Row="0"
				Grid.Column="6"
				HorizontalAlignment="Right"
				Content="Execute"
				Height="22"
				Command="{Binding ExecuteCommand}"
				Width="80"
				Margin="0 0 20 0" />

        <Button Grid.Row="0"
				Grid.Column="7"
				HorizontalAlignment="Right"
				Content="Reset"
				Height="22"
				Command="{Binding ResetCommand}"
				Width="80"
				Margin="0 0 20 0" />
        
        <avalonedit:TextEditor Grid.Row="1"
							   x:Name="Editor"
							   Grid.Column="0"
							   Grid.ColumnSpan="8"
							   IsEnabled="True"							   
                               FontSize="10pt"
                               FontFamily="Consolas"
                               ShowLineNumbers="True"                               
                               SyntaxHighlighting="C#"                               
                               Document="{Binding Document}"
							   HorizontalAlignment="Stretch">            
        </avalonedit:TextEditor>
        
        <GridSplitter Grid.Row="2"
					  Grid.Column="0"
					  Height="3"
					  HorizontalAlignment="Stretch"
					  VerticalAlignment="Center"
					  Grid.ColumnSpan="8"></GridSplitter>

        <controls:ReadiMonListView Grid.Column="0"
								   Grid.ColumnSpan="8"
								   Grid.Row="3"
								   HorizontalAlignment="Stretch"
								   VerticalAlignment="Stretch"
								   AlternationCount="2"
								   ItemsSource="{Binding Messages}">

            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment"
							Value="Stretch" />
                    <Setter Property="VerticalContentAlignment"
							Value="Stretch" />                    
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <controls:ReadiMonGridViewColumn Header="Machine"
													 DisplayMemberBinding="{Binding Machine}" />
                    <controls:ReadiMonGridViewColumn Header="AppDomain"
													 DisplayMemberBinding="{Binding AppDomain}" />
                    <controls:ReadiMonGridViewColumn Header="Name"
													 DisplayMemberBinding="{Binding Message.Name}" />
                    <controls:ReadiMonGridViewColumn Header="Value"
													 DisplayMemberBinding="{Binding Message.Value}" />                    
                </GridView>
            </ListView.View>

        </controls:ReadiMonListView>
    </Grid>
</UserControl>
