namespace ReadiMon.Plugin.Database.Status
{
	/// <summary>
	///     Class representing the SqlServerLogin type.
	/// </summary>
	public class SqlServerLogin
	{
		/// <summary>
		///     Initializes a new instance of the <see cref="SqlServerLogin" /> class.
		/// </summary>
		/// <param name="name">The name.</param>
		/// <param name="hasAccess">The has access.</param>
		/// <param name="isNtAccount">The is nt account.</param>
		/// <param name="isNtGroup">The is nt group.</param>
		/// <param name="sysAdmin">The system admin.</param>
		public SqlServerLogin( string name, int hasAccess, int isNtAccount, int isNtGroup, int sysAdmin )
		{
			Name = name;
			HasAccess = hasAccess;
			IsNtAccount = isNtAccount;
			IsNtGroup = isNtGroup;
			SysAdmin = sysAdmin;
		}

		/// <summary>
		///     Gets the name.
		/// </summary>
		/// <value>
		///     The name.
		/// </value>
		public string Name
		{
			get;
			private set;
		}

		/// <summary>
		///     Gets the has access.
		/// </summary>
		/// <value>
		///     The has access.
		/// </value>
		public int HasAccess
		{
			get;
			private set;
		}

		/// <summary>
		///     Gets the is nt account.
		/// </summary>
		/// <value>
		///     The is nt account.
		/// </value>
		public int IsNtAccount
		{
			get;
			private set;
		}

		/// <summary>
		///     Gets the is nt group.
		/// </summary>
		/// <value>
		///     The is nt group.
		/// </value>
		public int IsNtGroup
		{
			get;
			private set;
		}

		/// <summary>
		///     Gets the system admin.
		/// </summary>
		/// <value>
		///     The system admin.
		/// </value>
		public int SysAdmin
		{
			get;
			private set;
		}
	}
}